# Cooked by chef
[Unit]
Description=Schema Registry by Confluent
After=basic.target network-online.target
Wants=basic.target
Documentation=https://docs.confluent.io/current/

[Service]
Type=simple
EnvironmentFile=<%= node['confluent']['kafka_connect_standalone']['environment_file'] %>
ExecStart=/usr/bin/connect-standalone <%= node['confluent']['kafka_connect_standalone']['config_file'] %>
User=<%= node['confluent']['kafka_connect_standalone']['user'] %>
LimitNOFILE=<%= node['confluent']['kafka_connect_standalone']['file_limit'] %>
KillMode=process
RestartSec=5
TimeoutStopSec=<%= node['confluent']['kafka_connect_standalone']['systemd_service_timeoutstopsec'] %>
Type=simple

[Install]
WantedBy=multi-user.target
