# Cooked by chef
[Unit]
Description=Schema Registry by Confluent
After=basic.target network-online.target
Wants=basic.target
Documentation=https://docs.confluent.io/current/

[Service]
Type=simple
EnvironmentFile=<%= node['confluent']['schema_registry']['environment_file'] %>
ExecStart=/bin/schema-registry-start <%= node['confluent']['schema_registry']['config_file'] %>
User=<%= node['confluent']['schema_registry']['user'] %>
LimitNOFILE=<%= node['confluent']['schema_registry']['file_limit'] %>
KillMode=process
RestartSec=5
TimeoutStopSec=<%= node['confluent']['schema_registry']['systemd_service_timeoutstopsec'] %>
Type=simple

[Install]
WantedBy=multi-user.target
