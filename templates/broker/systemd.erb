# Cooked by chef
[Unit]
Description=Apache Kafka by Confluent
After=basic.target network-online.target
Wants=basic.target
Documentation=https://docs.confluent.io/current/

[Service]
Type=simple
EnvironmentFile=<%= node['confluent']['kafka_broker']['environment_file'] %>
ExecStart=/bin/kafka-server-start <%= node['confluent']['kafka_broker']['config_file'] %>
User=<%= node['confluent']['kafka_broker']['user'] %>
LimitNOFILE=<%= node['confluent']['kafka_broker']['file_limit'] %>
KillMode=process
RestartSec=5
TimeoutStopSec=<%= node['confluent']['kafka_broker']['systemd_service_timeoutstopsec'] %>
Type=simple

[Install]
WantedBy=multi-user.target
