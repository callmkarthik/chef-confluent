# Cooked by chef
[Unit]
Description=Apache Zookeeper by Confluent
After=basic.target network-online.target
Wants=basic.target
Documentation=https://docs.confluent.io/current/

[Service]
Type=simple
EnvironmentFile=<%= node['confluent']['zookeeper']['environment_file'] %>
ExecStart=/usr/bin/zookeeper-server-start <%= node['confluent']['zookeeper']['config_file'] %>
User=<%= node['confluent']['zookeeper']['user'] %>
LimitNOFILE=<%= node['confluent']['zookeeper']['file_limit'] %>
KillMode=process
RestartSec=5
TimeoutStopSec=<%= node['confluent']['zookeeper']['systemd_service_timeoutstopsec'] %>
Type=simple

[Install]
WantedBy=multi-user.target
